@model LeaveRequestVM

@{
    ViewData["Title"] = "Leave Request Details";

    string headerText;
    string className;

    if (Model.Approved == null)
    {
        headerText = "Pending Approval";
        className = "warning";
    }
    else if (Model.Approved == true)
    {
        headerText = "Approved";
        className = "success";
    }
    else
    {
        headerText = "Rejected";
        className = "danger";
    }
}

<h1>Leave Request Details</h1>

<div class="alealert alert-@className" role="alert">
    <h4 class="alert-heading">@headerText</h4>
    <hr />
    <p>
        <strong>Employee Name: </strong> @Model.Employee.FirstName @Model.Employee.LastName
    </p>
    <p>
        <strong>Date Requested: </strong> @Model.DateRequested
    </p>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaveType.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RequestComments)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RequestComments)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Approved == null)
    {
        <div class="container">
            <div class="row row-cols-auto">
                <div class="col">
                    <form asp-action="ApproveRequest">
                        <input name="Id" value="@Model.Id" type="hidden"/>
                        <input name="approved" value="true" type="hidden"/>
                        <button class="btn btn-success">Approve</button>
                    </form>
                </div>
                <div class="col">
                    <form asp-action="ApproveRequest">
                        <input name="Id" value="@Model.Id" type="hidden" />
                        <input name="approved" value="false" type="hidden" />
                        <button class="btn btn-danger">Reject</button>
                    </form>
                </div>
            </div>
        </div>  
    }
    <br />
    <a class="btn btn-dark" asp-action="Index">Back to List</a>
</div>
